
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USERS COLLECTION
    match /users/{userId} {
      // Allow users to create their own document, but only with the 'student' role.
      // This is crucial for the registration flow to succeed.
      allow create: if request.auth.uid == userId &&
                       request.resource.data.role == 'student';

      // Users can read their own profile. Tutors/Admins can read any profile.
      allow read: if request.auth.uid == userId || 
                     (request.auth.uid != null &&
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['tutor', 'admin']);

      // Users can update their own profile, but they cannot change their role.
      allow update: if request.auth.uid == userId &&
                       request.resource.data.role == resource.data.role;
    }

    // SUBMISSIONS COLLECTION
    match /submissions/{submissionId} {
      // Students can create their own submissions. The studentId must match their auth uid.
      allow create: if request.auth.uid != null && 
                       request.auth.uid == request.resource.data.studentId;
                       
      // Students can read/update their own submissions. Tutors/Admins can read/update any submission.
      allow read, update: if (request.auth.uid == resource.data.studentId) ||
                             (request.auth.uid != null &&
                              exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['tutor', 'admin']);

      // Students can delete their own submissions.
      allow delete: if request.auth.uid == resource.data.studentId;
    }
  }
}
